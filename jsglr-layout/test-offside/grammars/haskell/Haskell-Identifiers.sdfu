	DollarSign				 	 -> Symbol		
    [\!\#\%\&\*\+\.\/]
    \/ [\<\=\>\?\@\\\^\|\-\~] 	-> Symbol
    UnicodeSymbol 				-> Symbol
    UnicodePunctuation			-> Symbol

	Symbol | [\:]				-> SymbolOrDot
    Symbol SymbolOrDot*   		-> VARSYM
    [\:] SymbolOrDot+     		-> CONSYM

    "="                			-> VARSYM {reject}
    ReservedOp               	-> VARSYM {reject}
    ReservedOp               	-> CONSYM {reject}
    ":" -> CONSOP

