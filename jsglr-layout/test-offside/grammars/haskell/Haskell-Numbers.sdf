module Haskell-Numbers
imports UnicodeBasics

exports
  lexical syntax
    ( [\48-\55] )                                -> Octit       
    ( ( [\48-\57] | [\65-\70] | [\97-\102] ) )   -> Hexit       
    ( [\48] )                                    -> Zero        
    Zero Digit*                                  -> Decimal     
    ( [\49-\57] ) Digit*                         -> Decimal     
    Octit+                                       -> Octal       
    Hexit+                                       -> Hexadecimal 
    Decimal                                      -> INTEGER     
    ( [\48] ) ( ( [\79] | [\111] ) ) Octal       -> INTEGER     
    ( [\48] ) ( ( [\88] | [\120] ) ) Hexadecimal -> INTEGER     

  lexical restrictions
    Decimal -/- [\48-\57]
    Octal -/- [\48-\55]
    Hexadecimal -/- ( ( [\48-\57] | ( ( [\65-\70] | [\97-\102] ) ) ) )
    Zero -/- ( ( [\79] | ( ( [\88] | ( ( [\111] | [\120] ) ) ) ) ) )

  lexical syntax
    Decimal "." Decimal                                   -> FLOAT    
    Decimal Exponent                                      -> RATIONAL 
    Decimal "." Decimal Exponent                          -> RATIONAL 
    ( ( [\69] | [\101] ) ) ( ( [\43] | [\45] ) )? Decimal -> Exponent 

  lexical restrictions
    INTEGER -/- [\46] . [\48-\57]
    INTEGER
    -/- ( ( ( ( [\69] . [\48-\57] | [\101] . [\48-\57] ) ) | ( ( [\69] . ( ( [\43] | [\45] ) ) | [\101] . ( ( [\43] | [\45] ) ) ) ) ) )
    FLOAT -/- ( ( [\69] | [\101] ) )

  lexical syntax
    [] -> PRIMCHAR    
    [] -> PRIMSTRING  
    [] -> PRIMINTEGER 
    [] -> PRIMFLOAT   
    [] -> PRIMDOUBLE  
    [] -> CLITLIT     
    [] -> UNKNOWN     