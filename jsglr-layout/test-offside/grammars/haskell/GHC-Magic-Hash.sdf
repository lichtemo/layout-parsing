module GHC-Magic-Hash
imports Haskell-Identifiers
imports Haskell-Numbers
imports Haskell-Strings
exports
  lexical syntax
  	[a-z][A-Za-z0-9\'\_]*[\#]+ -> VARID
    [\_][A-Za-z0-9\'\_]+[\#]+  -> VARID
    [A-Z][A-Za-z0-9\'\_]*[\#]+ -> CONID
  
  lexical restrictions
  	VARID -/- [\#]
  	CONID -/- [\#]

  syntax
    <INTEGER-LEX> "#" -> <Literal-CF> {cons("Int"), prefer}
    <Char-CF> "#"    -> <Literal-CF> {prefer}
    <FLOAT-LEX> "#"    -> <Literal-CF> {cons("Float"), prefer}
    <RATIONAL-LEX> "#"   -> <Literal-CF> {cons("Float"), prefer}
    <String-CF> "#"   -> <Literal-CF> {prefer}
