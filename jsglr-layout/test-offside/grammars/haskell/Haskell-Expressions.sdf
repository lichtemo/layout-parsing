module Haskell-Expressions

imports
	Haskell-Identifier-Sorts
	Haskell-Operators
	
exports
  context-free syntax
    Exp -> AnyExp

    Qvar -> Exp {cons("Var")}
    Gcon -> Exp {cons("Constr")}
    Literal -> Exp {cons("Lit")}
    "(" Exps2 ")" -> Exp {cons("Product")}
%% "(#" Exps "#)" -> Exp {cons("Unboxed?")}
    "(" Exp ")" -> Exp {bracket}

    {Exp ","}+ -> Exps
    Exp "," {Exp ","}+ -> Exps2 {cons("Cons")}
    APat+ -> Fargs


  context-free syntax
    "infix" -> Infix {cons("Infix")}
    "infixl" -> Infix {cons("InfixL")}
    "infixr" -> Infix {cons("InfixR")}
    INTEGER? -> Prec
    {Op ","}+ -> Ops
    Infix Prec Ops -> Fixdecl {cons("FixDecl")}
    Fixdecl -> Decl

    "(" Exp Qop ")" -> Exp {cons("LSection")}
    "(" QopNoNeg Exp ")" -> Exp {cons("RSection")}

    Qop -> QopNoNeg
    "-" -> QopNoNeg {reject}
 
    "{" {Fbind ","}* "}" -> LabelBinds {cons("LabelBinds"), ignore-layout}

  context-free priorities
    Qvar "@" Exp -> Exp {cons("Named")}
  > Exp LabelBinds -> Exp {cons("Labeled")}
  > Exp -> Aexp
  > Exp Exp -> Exp {cons("AppBin"),left}
  > "-" Exp -> Exp {cons("Negation")}
  > {Exp Qop Exp -> Exp {cons("OpApp"), right}
  	 
  	}
  > Exp ProportionOp CType -> Exp {ast("Typed(<1>,<3>)")}


  context-free syntax
   "\\" Fargs RightArrowOp Exp -> Exp {ast("Abs(<1>,<3>)"), longest-match}
    "let" Declbinds "in" Exp -> Exp {cons("Let"), longest-match}
    "if" AnyExp "then" AnyExp "else" Exp -> Exp {cons("If"), longest-match}
    "do" StmtList -> Exp {cons("Do"), longest-match}
    "do" StmtList -> DoLay {cons("Do"), longest-match}
    "case" AnyExp "of" AltList -> Exp {cons("Case"), longest-match}
     "if" AnyExp	-> LayIf 	{layout("2.first.col < 2.left.col")}
     "then" AnyExp	-> LayThen 	{layout("2.first.col < 2.left.col")}
     "else" AnyExp	-> LayElse 	{layout("2.first.col < 2.left.col")}
     %% the position of the "do" keyword does not matter here, so we include additional productions for do
     %% layout constraint is the negation of the constraints above to avoid ambiguities, because do-blocks are parsed
     %% as AnyExp which fullfil the layout constraint
     "if" DoLay		-> LayIf	{layout("2.first.col >= 2.left.col")}
     "then" DoLay	-> LayThen	{layout("2.first.col >= 2.left.col")}
     "else" DoLay	-> LayElse 	{layout("2.first.col >= 2.left.col")}
     LayIf LayThen LayElse 	-> IfThenElse {cons("If"), longest-match}
     IfThenElse 			-> LayIfThenElse {layout("1.first.col <= 1.left.col")}

  context-free priorities
   Exp Exp -> Exp {cons("AppBin"),left}
   > {
        "\\" Fargs RightArrowOp Exp -> Exp
       "let" Declbinds "in" Exp -> Exp
       "if" AnyExp "then" AnyExp "else" Exp -> Exp
       "case" AnyExp "of" AltList -> Exp
       "do" StmtList -> Exp
      }

  context-free priorities
    Exp Qop Exp -> Exp
  <0>
  > {
   "\\" Fargs RightArrowOp Exp -> Exp
     "let" Declbinds "in" Exp -> Exp
     "if" AnyExp "then" AnyExp "else" Exp -> Exp
    }
 
   context-free priorities
    Exp ProportionOp CType -> Exp
  .> {
   "\\" Fargs RightArrowOp Exp -> Exp
     "let" Declbinds "in" Exp -> Exp
     "if" AnyExp "then" AnyExp "else" Exp -> Exp
    }

